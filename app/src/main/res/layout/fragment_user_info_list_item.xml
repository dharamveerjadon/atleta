<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:src="@drawable/ic_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBlack" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <com.atleta.customview.AtletaTextView
                       android:id="@+id/txt_user_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/margin_default_half"
                       android:ellipsize="end"
                       android:textColor="@color/colorBlack"
                       android:textFontWeight="700"
                       android:textSize="18sp"
                       app:appFont="Poppins-Bold"
                       tools:text="Dharamveer Jadon" />

                   <com.atleta.customview.AtletaTextView
                       android:id="@+id/txt_skills"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       app:appFont="Poppins-Regular"
                       tools:text="find out more" />

                   <com.atleta.customview.AtletaTextView
                       android:id="@+id/txt_price_per_hour"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       app:appFont="Poppins-Regular"
                       tools:text="find out more" />

                   <com.atleta.customview.AtletaTextView
                       android:id="@+id/txt_expected_salary"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       app:appFont="Poppins-Regular"
                       tools:text="find out more" />

                   <com.atleta.customview.AtletaTextView
                       android:id="@+id/txt_experience"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       app:appFont="Poppins-Regular"
                       tools:text="find out more" />
               </LinearLayout>

               <ImageView
                   android:src="@drawable/ic_forward_arrow_orange"
                   android:layout_width="wrap_content"
                   android:layout_weight=".1"
                   android:layout_gravity="bottom"
                   android:layout_marginBottom="16dp"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
