<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_basketball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_weight="1"
            android:layout_margin="4sp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_basketball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_basketball_black"/>

                <com.atleta.customview.AtletaTextView
                    android:id="@+id/txt_basketball"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BasketBall"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    style="@style/AppTheme.TextView"
                    app:appFont="Poppins-Regular"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_cricket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_weight="1"
            android:layout_margin="4sp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_cricket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/ic_cricket_black"/>

                <com.atleta.customview.AtletaTextView
                    android:id="@+id/txt_cricket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cricket"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    style="@style/AppTheme.TextView"
                    app:appFont="Poppins-Regular"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_football"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_weight="1"
            android:layout_margin="4sp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_football"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/ic_soccor_black"/>

                <com.atleta.customview.AtletaTextView
                    android:id="@+id/txt_football"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FootBall"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    style="@style/AppTheme.TextView"
                    app:appFont="Poppins-Regular"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_fitness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_weight="1"
            android:layout_margin="4sp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_fitness"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fitness_black"/>

                <com.atleta.customview.AtletaTextView
                    android:id="@+id/txt_fitness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fitness"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    style="@style/AppTheme.TextView"
                    app:appFont="Poppins-Regular"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>