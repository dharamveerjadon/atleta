<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="68dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/item_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/lnr_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/padding_default_half"
        android:paddingLeft="@dimen/padding_default_half">

        <ImageView
            android:id="@+id/img_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_default_half"
            android:paddingLeft="@dimen/padding_default_half"
            android:paddingBottom="@dimen/padding_default_half"
            android:src="@drawable/circle_cross" />
    </LinearLayout>

</FrameLayout>