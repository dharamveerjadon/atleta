<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191970"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <com.atleta.customview.AtletaTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Select Sports Type"
            android:textColor="@android:color/white"
            android:textFontWeight="700"
            android:textSize="24sp"
            app:appFont="Poppins-Bold" />

        <com.atleta.customview.AtletaTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please choose your favorite game"
            android:textColor="@android:color/white"
            android:textFontWeight="700"
            android:textSize="16sp"
            app:appFont="Poppins-Regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:id="@+id/fl_truck"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp" />

                        <com.atleta.customview.AtletaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:paddingBottom="4dp"
                            android:text="Basketball"
                            android:textSize="12sp"
                            app:appFont="Poppins-Regular" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:id="@+id/fl_trailers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp" />

                        <com.atleta.customview.AtletaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:paddingBottom="4dp"
                            android:text="Football"
                            android:textSize="12sp"
                            app:appFont="Poppins-Regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:id="@+id/fl_parts_accessories"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp" />

                        <com.atleta.customview.AtletaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:paddingBottom="4dp"
                            android:text="Cricket"
                            android:textSize="12sp"
                            app:appFont="Poppins-Regular" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:id="@+id/fl_wish_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp" />

                        <com.atleta.customview.AtletaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:paddingBottom="4dp"
                            android:text="Fitness"
                            android:textSize="12sp"
                            app:appFont="Poppins-Regular" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:id="@+id/fl_try_truck_land"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp" />

                        <com.atleta.customview.AtletaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:paddingBottom="4dp"
                            android:text="Hockey"
                            android:textSize="12sp"
                            app:appFont="Poppins-Regular" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_white_border_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp" />

                        <com.atleta.customview.AtletaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:paddingBottom="4dp"
                            android:text="Other"
                            android:textSize="12sp"
                            app:appFont="Poppins-Regular" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.atleta.customview.AtletaButton
                android:id="@+id/btn_register"
                style="@style/AppTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="24dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/border_button_orange"
                android:elevation="4dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:appFont="Poppins-Regular" />

        </LinearLayout>

    </LinearLayout>

    <com.atleta.customview.SpinnerView
        android:id="@id/spinnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>