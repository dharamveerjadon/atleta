<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_bar"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.atleta.customview.AtletaTextView
                        android:id="@+id/txt_title"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:text="Full stack developer developer"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:appFont="Poppins-SemiBold" />

                    <com.atleta.customview.AtletaTextView
                        android:id="@+id/txt_date"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:drawableLeft="@drawable/ic_date_orange"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_micro"
                        android:padding="8dp"
                        app:appFont="Poppins-Regular"
                        android:textColor="@android:color/black"
                        tools:text="4th May 2021, 5:00pm" />
                </LinearLayout>

                <com.atleta.customview.AtletaTextView
                    android:id="@+id/txt_description"
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:appFont="Poppins-Regular"
                    android:textSize="@dimen/text_size_micro"
                    android:textColor="@android:color/black"
                    tools:text="Lorem Ipsum is simply dummy text of the printing" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.atleta.customview.AtletaTextView
                        android:id="@+id/txt_job_type"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_access_time_orange"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        app:appFont="Poppins-Regular"
                        android:textSize="@dimen/text_size_micro"
                        tools:text="Full Time" />

                    <ImageView
                        android:id="@+id/view_applied_developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:src="@drawable/ic_eye_orange"
                        android:visibility="gone" />

                </LinearLayout>

                <com.atleta.customview.TagView
                    android:id="@+id/tag_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.atleta.customview.AtletaTextView
                        android:id="@+id/txt_year_of_experience"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_experience"
                        android:drawablePadding="4dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="10 yrs experience"
                        android:textColor="@android:color/black"
                        app:appFont="Poppins-Regular"
                        android:textSize="@dimen/text_size_micro" />

                    <com.atleta.customview.AtletaTextView
                        android:id="@+id/txt_tentative_budget"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        app:appFont="Poppins-Regular"
                        android:textSize="@dimen/text_size_small"
                        tools:text="30" />

                    <ImageView
                        android:id="@+id/img_status"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:src="@drawable/ic_decline"
                        android:padding="8dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
