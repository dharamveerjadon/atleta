<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragments.SignInFragment">

    <ImageView
        android:id="@+id/dash_group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:src="@drawable/dash_group" />

    <ImageView
        android:id="@+id/dash_group_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_group_1"
        android:padding="4dp"
        android:src="@drawable/dash_group" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ellipse_orange" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="vertical"
                android:padding="24dp">

                <com.atleta.customview.AtletaTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_text"
                    android:textColor="@android:color/black"
                    android:textSize="40sp"
                    app:appFont="Poppins-Bold"
                    android:textFontWeight="700"
                    />

                <com.atleta.customview.AtletaTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_to_get_started"
                    android:textColor="@android:color/black"
                    app:appFont="Poppins-Regular"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="24dp">

                <com.atleta.customview.AtletaTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:text="Display Name"
                    app:appFont="Poppins-Regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <com.atleta.customview.AtletaEditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/edt_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edit_text"
                    android:inputType="text"
                    app:appFont="Poppins-Regular"
                    android:padding="12dp"
                    android:textColor="@android:color/black" />


                <com.atleta.customview.AtletaTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:text="@string/email_id"
                    app:appFont="Poppins-Regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <com.atleta.customview.AtletaEditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/edt_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edit_text"
                    android:inputType="text"
                    app:appFont="Poppins-Regular"
                    android:padding="12dp"
                    android:textColor="@android:color/black" />

                <com.atleta.customview.AtletaTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4sp"
                    app:appFont="Poppins-Regular"
                    android:text="@string/create_password"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <com.atleta.customview.AtletaEditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/edt_create_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edit_text"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    app:appFont="Poppins-Regular"
                    android:textColor="@android:color/black" />

                <com.atleta.customview.AtletaTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4sp"
                    app:appFont="Poppins-Regular"
                    android:text="@string/repeat_password"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <com.atleta.customview.AtletaEditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/edt_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edit_text"
                    android:inputType="text"
                    app:appFont="Poppins-Regular"
                    android:padding="12dp"
                    android:textColor="@android:color/black" />

                <com.atleta.customview.AtletaButton
                    style="@style/AppTheme.Button"
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="24dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/border_button_orange"
                    android:elevation="4dp"
                    app:appFont="Poppins-Regular"
                    android:textColor="@android:color/white"
                    android:text="Register &amp; Login"
                    android:textAllCaps="false" />
                
            </LinearLayout>
        </LinearLayout>
</ScrollView>
    </FrameLayout>

    <com.atleta.customview.SpinnerView
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>