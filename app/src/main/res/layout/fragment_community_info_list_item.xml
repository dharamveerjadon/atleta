<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_cover"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gradient_red" />

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gradient_orange" />

                <Button
                    android:id="@+id/btn_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_orange"
                    android:text="Join"
                    android:layout_marginRight="@dimen/margin_default_half"
                    android:layout_marginTop="120dp"
                    android:layout_gravity="end"
                    android:textColor="@color/colorWhite" />
            </FrameLayout>

            <com.atleta.customview.AtletaTextView
                android:id="@+id/txt_comunity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_double"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:appFont="Poppins-Regular" />

            <com.atleta.customview.AtletaTextView
                android:id="@+id/txt_community_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_double"
                android:layout_marginTop="@dimen/margin_default"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:appFont="Poppins-Regular" />

            <com.atleta.customview.AtletaTextView
                android:id="@+id/txt_joined_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_double"
                android:layout_marginTop="@dimen/margin_default"
                android:gravity="center"
                android:text="20 members"
                android:textSize="14sp"
                app:appFont="Poppins-Regular" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
